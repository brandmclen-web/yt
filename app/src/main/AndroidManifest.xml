<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yt">

    <!-- Internet access for streaming -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Modify audio settings for equalizer feature -->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <!-- Hardware video acceleration support -->
    <uses-feature
        android:name="android.hardware.vulkan.level"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.vulkan.version"
        android:required="false" />

    <!-- 4K video streaming support -->
    <uses-feature
        android:name="android.hardware.video.encoding"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.video.decoding"
        android:required="false" />

    <!-- Support for high-resolution displays for 4K content -->
    <uses-feature
        android:name="android.hardware.screen.landscape"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.screen.portrait"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.YT">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>